{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Group to manage permissions required by IaC agents: IaCAgents. Managed Policies attached: CloudFormationIaCAgent, CloudFrontIaCAgent, S3IaCAgent.",
  "Resources": {
    "IaCAgentsGroup": {
      "Type": "AWS::IAM::Group",
      "Properties": {
        "GroupName": "IaCAgents",
        "ManagedPolicyArns": [
          {
            "Fn::Join": [
              "",
              [
                "arn:aws:iam::",
                {
                  "Ref": "AWS::AccountId"
                },
                ":policy/CloudFormationIaCAgent"
              ]
            ]
          },
          {
            "Fn::Join": [
              "",
              [
                "arn:aws:iam::",
                {
                  "Ref": "AWS::AccountId"
                },
                ":policy/CloudFrontIaCAgent"
              ]
            ]
          },
          {
            "Fn::Join": [
              "",
              [
                "arn:aws:iam::",
                {
                  "Ref": "AWS::AccountId"
                },
                ":policy/S3IaCAgent"
              ]
            ]
          }
        ]
      }
    }
  },
  "Outputs": {
    "IaCAgentsGroupValue": {
      "Description": "IaCAgents Group Created with Managed Policies attached: CloudFormationIaCAgent, CloudFrontIaCAgent, S3IaCAgent.",
      "Value": {
        "Ref": "IaCAgentsGroup"
      }
    }
  }
}
