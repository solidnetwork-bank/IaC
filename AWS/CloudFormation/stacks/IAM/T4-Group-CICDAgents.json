{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Group to manage permissions required by CI CD CLI agents",
  "Resources": {
    "CICDAgentsGroup": {
      "Type": "AWS::IAM::Group",
      "Properties": {
        "GroupName": "CICDAgents",
        "ManagedPolicyArns": [
          {
            "Fn::Join": [
              "",
              [
                "arn:aws:iam::",
                {
                  "Ref": "AWS::AccountId"
                },
                ":policy/CloudFormationAWSCLIAgent"
              ]
            ]
          },
          {
            "Fn::Join": [
              "",
              [
                "arn:aws:iam::",
                {
                  "Ref": "AWS::AccountId"
                },
                ":policy/CloudFrontAWSCLIAgent"
              ]
            ]
          },
          {
            "Fn::Join": [
              "",
              [
                "arn:aws:iam::",
                {
                  "Ref": "AWS::AccountId"
                },
                ":policy/S3AWSCLIAgent"
              ]
            ]
          }
        ]
      }
    }
  },
  "Outputs": {
    "CICDAgentsGroupValue": {
      "Description": "CICDAgents Group Created",
      "Value": {
        "Ref": "CICDAgentsGroup"
      }
    }
  }
}
