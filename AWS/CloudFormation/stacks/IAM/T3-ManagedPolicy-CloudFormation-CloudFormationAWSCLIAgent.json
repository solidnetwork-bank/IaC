{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "CloudFormation Permissions required by CI CD CLI agents",
  "Resources": {
    "CloudFormationAWSCLIAgentPolicy": {
      "Type": "AWS::IAM::ManagedPolicy",
      "Properties": {
        "Description": "CloudFormation Permissions required by CI CD CLI agents",
        "ManagedPolicyName": "CloudFormationAWSCLIAgent",
        "PolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Action": [
                 "cloudformation:ListStacks",
                 "cloudformation:CreateChangeSet",
                 "cloudformation:DeleteChangeSet",
                 "cloudformation:DescribeStacks",
                 "cloudformation:RollbackStack",
                 "cloudformation:DescribeStackEvents",
                 "cloudformation:CreateStack",
                 "cloudformation:DeleteStack",
                 "cloudformation:UpdateStack",
                 "cloudformation:DescribeChangeSet",
                 "cloudformation:ExecuteChangeSet",
                 "cloudformation:ValidateTemplate",
                 "cloudformation:ListChangeSets"
              ],
              "Resource": "*"
            }
          ]
        }
      }
    }
  },
  "Outputs": {
    "CloudFormationAWSCLIAgentPolicyValue": {
      "Description": "CloudFormation Policy created",
      "Value": {
        "Ref": "CloudFormationAWSCLIAgentPolicy"
      }
    }
  }
}
