{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "Launch an EC2 Instance. Ubuntu AMI. CloudWatch Log Group. 8GB gp3 space.",
    "Parameters": {
        "InstanceName": {
            "Type": "String"
        },
        "ImageId": {
            "Type": "String"
        },
        "InstanceProfileId": {
            "Type": "String"
        },
        "InstanceType": {
            "Type": "String"
        },
        "SecurityGroupId": {
            "Type": "String"
        },
        "SubnetId": {
            "Type": "String"
        }
    },
    "Resources": {
        "BankSolidnetworkXyzKeyPair": {
            "Type": "AWS::EC2::KeyPair",
            "Properties": {
                "KeyFormat": "pem",
                "KeyName": {
                    "Fn::Join": [
                        "",
                        [
                            {
                                "Ref": "InstanceName"
                            },
                            "-KeyPair"
                        ]
                    ]
                },
                "KeyType": "rsa",
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": {
                            "Fn::Join": [
                                "",
                                [
                                    {
                                        "Ref": "InstanceName"
                                    },
                                    "-KeyPair"
                                ]
                            ]
                        }
                    }
                ]
            }
        },
        "BankSolidnetworkXyzEC2Instance": {
            "Type": "AWS::EC2::Instance",
            "Properties": {
                "ImageId": {
                    "Ref": "ImageId"
                },
                "KeyName": {
                    "Ref": "BankSolidnetworkXyzKeyPair"
                },
                "IamInstanceProfile": {
                    "Ref": "InstanceProfileId"
                },
                "AvailabilityZone": {
                    "Fn::Sub": "${AWS::Region}a"
                },
                "InstanceType": {
                    "Ref": "InstanceType"
                },
                "BlockDeviceMappings": [
                    {
                        "DeviceName": "/dev/sda1",
                        "Ebs": {
                            "VolumeType": "gp3",
                            "VolumeSize": "8",
                            "DeleteOnTermination": "true"
                        }
                    }
                ],
                "NetworkInterfaces": [
                    {
                        "AssociatePublicIpAddress": "true",
                        "DeviceIndex": "0",
                        "DeleteOnTermination": "true",
                        "Description": "primary network interface",
                        "GroupSet": [
                            {
                                "Ref": "SecurityGroupId"
                            }
                        ],
                        "SubnetId": {
                            "Ref": "SubnetId"
                        }
                    }
                ],
                "SecurityGroupIds": [
                    {
                        "Ref": "SecurityGroupId"
                    }
                ],
                "SubnetId": {
                    "Ref": "SubnetId"
                },
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": {
                            "Ref": "InstanceName"
                        }
                    }
                ]
            }
        },
        "ClodWatchLogGroup": {
            "DependsOn": "BankSolidnetworkXyzEC2Instance",
            "Type": "AWS::Logs::LogGroup",
            "Properties": {
                "LogGroupClass": "STANDARD",
                "LogGroupName": {
                    "Ref": "InstanceName"
                },
                "RetentionInDays": 7,
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": {
                            "Ref": "InstanceName"
                        }
                    }
                ]
            }
        }
    },
    "Outputs": {
        "PublicDNS": {
            "Description": "Public DNS of EC2 instance",
            "Value": {
                "Fn::GetAtt": [
                    "BankSolidnetworkXyzEC2Instance",
                    "PublicDnsName"
                ]
            }
        },
        "URL": {
            "Description": "EC2 Instance Launched.",
            "Value": {
                "Fn::Join": [
                    "",
                    [
                        "http://",
                        {
                            "Fn::GetAtt": [
                                "BankSolidnetworkXyzEC2Instance",
                                "PublicIp"
                            ]
                        }
                    ]
                ]
            }
        }
    }
}