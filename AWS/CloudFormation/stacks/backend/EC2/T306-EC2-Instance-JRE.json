{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "Launch an EC2 JRE Instance. Amazon Linux AMI. CloudWatch Log Group. 8GB gp3 space.",
    "Parameters": {
        "InstanceName": {
            "Type": "String"
        },
        "ImageId": {
            "Type": "String"
        },
        "InstanceProfileId": {
            "Type": "String"
        },
        "InstanceType": {
            "Type": "String"
        },
        "SecurityGroupId": {
            "Type": "String"
        },
        "SubnetId": {
            "Type": "String"
        }
    },
    "Resources": {
        "BankSolidnetworkXyzEC2Instance": {
            "Type": "AWS::EC2::Instance",
            "Metadata": {
                "Comment": "Install CloudWatch Agent",
                "AWS::CloudFormation::Init": {
                    "configSets": {
                        "initSetup": [
                            "setup_aws_cloudwatch_agent"
                        ]
                    },
                    "setup_aws_cloudwatch_agent": {
                        "packages": {
                            "yum": {
                                "amazon-cloudwatch-agent": []
                            }
                        },
                        "files": {
                            "/opt/aws/amazon-cloudwatch-agent/etc/amazon-cloudwatch-agent.json": {
                                "source": "https://raw.githubusercontent.com/solidnetwork-bank/IaC/main/AWS/CloudWatch/amazon-cloudwatch-agent.json",
                                "mode": "000644",
                                "owner": "root",
                                "group": "root"
                            }
                        },
                        "services": {
                            "sysvinit": {
                                "amazon-cloudwatch-agent": {
                                    "enabled": "true",
                                    "ensureRunning": "true"
                                }
                            }
                        }
                    }
                }
            },
            "Properties": {
                "ImageId": {
                    "Ref": "ImageId"
                },
                "KeyName": {
                    "Ref": "InstanceName"
                },
                "IamInstanceProfile": {
                    "Ref": "InstanceProfileId"
                },
                "AvailabilityZone": {
                    "Fn::Sub": "${AWS::Region}a"
                },
                "InstanceType": {
                    "Ref": "InstanceType"
                },
                "BlockDeviceMappings": [
                    {
                        "DeviceName": "/dev/sda1",
                        "Ebs": {
                            "VolumeType": "gp3",
                            "VolumeSize": "8",
                            "DeleteOnTermination": "true"
                        }
                    }
                ],
                "NetworkInterfaces": [
                    {
                        "AssociatePublicIpAddress": "true",
                        "DeviceIndex": "0",
                        "DeleteOnTermination": "true",
                        "Description": "primary network interface",
                        "GroupSet": [
                            {
                                "Ref": "SecurityGroupId"
                            }
                        ],
                        "SubnetId": {
                            "Ref": "SubnetId"
                        }
                    }
                ],
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": {
                            "Ref": "InstanceName"
                        }
                    }
                ],
                "UserData": {
                    "Fn::Base64": {
                        "Fn::Join": [
                            "",
                            [
                                "#!/bin/bash -xe\n",
                                "",
                                "yum install -y aws-cfn-bootstrap",
                                "sudo cfn-init -v ",
                                "         --stack ",
                                {
                                    "Ref": "AWS::StackName"
                                },
                                "         --resource BankSolidnetworkXyzEC2Instance ",
                                "         --configsets initSetup ",
                                "         --region ",
                                {
                                    "Ref": "AWS::Region"
                                },
                                "\n",
                                "sudo mkdir -p /var/repo/logs\n",
                                "sudo yum install -y java-21-amazon-corretto\n",
                                "cd /var/repo\n",
                                "wget https://github.com/solidnetwork-bank/card-service/raw/main/target/service-0.0.2-SNAPSHOT.jar\n",
                                "nohup java -jar service-0.0.2-SNAPSHOT.jar > /var/repo/logs/card-service.log &\n"
                            ]
                        ]
                    }
                }
            }
        },
        "ClodWatchLogGroup": {
            "DependsOn": "BankSolidnetworkXyzEC2Instance",
            "Type": "AWS::Logs::LogGroup",
            "Properties": {
                "LogGroupClass": "STANDARD",
                "LogGroupName": {
                    "Ref": "InstanceName"
                },
                "RetentionInDays": 7,
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": {
                            "Ref": "InstanceName"
                        }
                    }
                ]
            }
        }
    },
    "Outputs": {
        "PublicDNS": {
            "Description": "Public DNS of EC2 instance",
            "Value": {
                "Fn::GetAtt": [
                    "BankSolidnetworkXyzEC2Instance",
                    "PublicDnsName"
                ]
            }
        },
        "URL": {
            "Description": "EC2 Instance Launched.",
            "Value": {
                "Fn::Join": [
                    "",
                    [
                        "http://",
                        {
                            "Fn::GetAtt": [
                                "BankSolidnetworkXyzEC2Instance",
                                "PublicIp"
                            ]
                        }
                    ]
                ]
            }
        }
    }
}