{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "https://bank.solidnetwork.xyz static hosting using S3 bucket and CloudFront.",
  "Resources": {
    "BankSolidnetworkXyzBucket": {
      "Type": "AWS::S3::Bucket",
      "Properties": {
        "BucketName": "bank.solidnetwork.xyz",
        "PublicAccessBlockConfiguration": {
          "BlockPublicAcls": false,
          "BlockPublicPolicy": false,
          "IgnorePublicAcls": false,
          "RestrictPublicBuckets": false
        },
        "WebsiteConfiguration": {
          "IndexDocument": "index.html",
          "ErrorDocument": "error.html"
        }
      }
    },
    "BankSolidnetworkXyzBucketPolicy": {
      "Type": "AWS::S3::BucketPolicy",
      "Properties": {
        "Bucket": {
          "Ref": "BankSolidnetworkXyzBucket"
        },
        "PolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": "*",
              "Action": "s3:GetObject",
              "Resource": {
                "Fn::Join": [
                  "",
                  [
                    "arn:aws:s3:::",
                    {
                      "Ref": "BankSolidnetworkXyzBucket"
                    },
                    "/*"
                  ]
                ]
              }
            }
          ]
        }
      }
    }
  },
  "Outputs": {
    "BankSolidnetworkXyzBucketValue": {
      "Description": "bank.solidnetwork.xyz S3 bucket created.",
      "Value": {
        "Ref": "BankSolidnetworkXyzBucket"
      }
    },
    "WebsiteURL": {
      "Value": {
        "Fn::GetAtt": [
          "BankSolidnetworkXyzBucket",
          "WebsiteURL"
        ]
      },
      "Description": "URL for website hosted on S3"
    },
    "S3BucketSecureURL": {
      "Value": {
        "Fn::Join": [
          "",
          [
            "https://",
            {
              "Fn::GetAtt": [
                "BankSolidnetworkXyzBucket",
                "DomainName"
              ]
            }
          ]
        ]
      },
      "Description": "Name of S3 bucket to hold website content"
    }
  }
}
